if (!isset($_GET["spin"])) {
    echo "<script>
        Swal.fire({
            title: 'Ingin melakukan spin artikel?',
            showDenyButton: true,
            confirmButtonText: 'Ya',
            denyButtonText: `Tidak`,
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = window.location.href + '?spin=yes';
            } else if (result.isDenied) {
                window.location.href = window.location.href + '?spin=no';
            }
        });
    </script>";
    exit();
}

$spin_option = $_GET["spin"];
echo "<p class='info'>Pilihan Anda: " .
    ($spin_option == "yes"
        ? "Spin artikel diaktifkan."
        : "Spin artikel tidak diaktifkan.") .
    "</p>";

$f = "list.txt";
$k = file($f, FILE_IGNORE_NEW_LINES | FILE_SKIP_EMPTY_LINES);
$total_keywords = count($k);

echo "<p class='info'>Keyword Found [{$total_keywords}]!<br><strong>Starting this process...</strong></p>";

$m = [];
foreach ($k as $kw) {
    echo "<h1>[ {$kw} ]</h1>";

    $kw = str_replace(" ", "-", $kw);
    $unique_id = rand(1000, 9999);
    $folder_name = preg_replace("/\s+/", "_", $kw) . "-" . $unique_id;
    $amp_keyword = preg_replace("/\s+/", "_", $kw);
    $ku = strtoupper($kw);

    echo "<p class='info'>üîç <strong>Getting Keyword...</strong><br>[SUCCESS] Retrieved {$kw} from list.txt</p>";
    echo "<p class='info'>üìÅ <strong>Finding Folder Location...</strong><br>[PROCESS] {$folder_name}</p>";

    if (!file_exists($folder_name)) {
        if (!mkdir($folder_name, 0755, true)) {
            echo "<p class='error'>[ERROR] Failed to create folder: $folder_name</p>";
            continue;
        } else {
            echo "<p class='success'>üìÅ <strong>Folder Created...</strong><br>[SUCCESS] Successfully created $folder_name</p>";
        }
    } else {
        echo "<p class='success'>üìÅ <strong>Folder Already Exists:</strong><br>[SUCCESS] Folder already exists $folder_name</p>";
    }

    $serp = s($kw, $a);
    if (!$serp) {
        echo "<p class='error'>[ERROR] Failed to retrieve SERP results for: $kw</p>";
        continue;
    }

    $t = $serp["title"];
    $d = $serp["desc"];

    echo "<p class='info'>üìù <strong>Original Title:</strong><br>{$serp["original_title"]}</p>";
    echo "<p class='info'>üìñ <strong>Original Description:</strong><br>{$serp["original_desc"]}</p>";

    if ($spin_option == "yes") {
        echo "<p class='info'>üìù <strong>Hasil Spin Title:</strong><br>{$serp["title"]}</p>";
        echo "<p class='info'>üìñ <strong>Hasil Spin Description:</strong><br>{$serp["desc"]}</p>";
    }

    $canonical_url = $b . "/" . $folder_name . "/";
    echo "<p class='info'>üîó <strong>Generating Canonical...</strong><br>[SUCCESS] <a href='$canonical_url'>$canonical_url</a></p>";

    $amp_link = $base_amp_url;

    // Save the spun content in the file, if spin was selected
    if ($spin_option == "yes") {
        $h = buatPage(
            $serp["title_plain"],
            $serp["desc_plain"],
            $canonical_url,
            $amp_link,
            $unique_id,
            $redirect_url,
            $ku,
            $logo,
            $bnr,
            $fav
        );
    } else {
        $h = buatPage(
            $serp["original_title"],
            $serp["original_desc"],
            $canonical_url,
            $amp_link,
            $unique_id,
            $redirect_url,
            $ku,
            $logo,
            $bnr,
            $fav
        );
    }

    file_put_contents($folder_name . "/index.html", $h);
    echo "<p class='success'>‚úÖ <strong>Successfully Created Folder for Keyword {$kw}</strong></p>";
    echo "<div class='separator'></div>";

    $m[] = $canonical_url;
}

$mf = '<?xml version="1.0" encoding="UTF-8"?>';
$mf .= '<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">';
foreach ($m as $e) {
    $mf .=
        '<url>
        <loc>' .
        htmlspecialchars($e) .
        '</loc>
        <lastmod>' .
        date("Y-m-d") .
        '</lastmod>
        <changefreq>daily</changefreq>
        <priority>0.8</priority>
    </url>';
}
$mf .= "</urlset>";

$sitemap_url = $b . "/sitemap.xml";
file_put_contents("sitemap.xml", $mf);

echo "<div class='log'>";
echo "<p class='info'>üìÑ Generating Sitemap...</p>";
echo "<p class='success'>‚úÖ <strong>Sitemap successfully created: <a href='{$sitemap_url}'>{$sitemap_url}</a></strong></p>";

function bR($b)
{
    $r = "User-agent: *\n";
    $r .= "Allow: /\n";
    $r .= "Sitemap: {$b}/sitemap.xml\n";
    file_put_contents("robots.txt", $r);
    echo "<p class='info'>ü§ñ Generating robots.txt...</p>";
    echo "<p class='success'>‚úÖ <strong>robots.txt successfully created allowing all bots.</strong></p>";
}

bR($b);

echo "<div class='separator'></div>";
echo "</div>";

echo "</div>
    </div>
</body>
</html>";
